<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raihanazharrafi.pkl.HalamanUtamaActivity">


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/lucu"
            android:id="@+id/ViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ImageView>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <android.support.v7.widget.CardView
        android:onClick="pindah2"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_margin="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circlebackgroundyellow"
            android:src="@drawable/dog"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Anjing"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:onClick="pindah"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_margin="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circlebackgroundpurple"
                android:src="@drawable/cat"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Kucing"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
        <android.support.v7.widget.CardView
            android:foreground="?selectableItemBackground"
            android:onClick="pindah3"
            android:layout_margin="6dp"
            android:layout_width="340dp"
            android:layout_height="130dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:background="@drawable/circlebackgroundblue"
                    android:src="@drawable/lucu"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="Informasi Tentang Anjing dan Kucing"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
</RelativeLayout>
